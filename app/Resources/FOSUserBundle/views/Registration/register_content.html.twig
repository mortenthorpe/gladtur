{% trans_default_domain 'FOSUserBundle' %}
{{ render(controller("WebsiteBundle:Profiles:profileIcons")) }}
<form action="{{ path('fos_user_registration_register') }}" {{ form_enctype(form) }} method="POST" class="fos_user_registration_register" autocomplete="off" novalidate>
    {{ form_row(form.username) }}
    {{ form_row(form.email) }}
    {{ form_label(form.profile) }}
    <div style="float:none;clear:both">
        <img id="profile_icon" src="" style="width:40px;height:40px;float:left;margin-right:6px"/>
        <div style="float:left;width:260px;padding:12px">{{ form_errors(form.profile) }} {{ form_widget(form.profile) }}</div>
    </div>
    <div style="clear: both; float:none;">
        {{ form_widget(form.freeprofileTags) }}
    </div>
    <div id="user_profile_extras">
        {{ form_widget(form.newsletter) }}
        {{ form_label(form.newsletter) }}
        {{ form_widget(form.contact) }}
        {{ form_label(form.contact) }}
    </div>
    <div style="clear: both; float:none;">
    {{ form_rest(form) }}
    <input type="submit" value="Opret din bruger"/><input type="reset" value="Fortryd indtastninger">
    </div>
</form>
