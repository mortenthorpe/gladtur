{% block pagejs %}
    <script type="text/javascript">
        $(document).ready(function(){
           $('input.btn_category').click(function(){
              if($(this).is(':checked')){
                checked = $(this).attr('id');
                $('input.btn_category').each(function(){
                    if($(this).attr('id') !== checked ){$(this).attr('checked',false);}
                });
              }
           });
        });
    </script>
{% endblock pagejs %}
<div id="categories_list">
<ul class="categories_list">
    <li><input id="category_all" type="checkbox" class="btn_category"/><div class="btn_category" style="background:yellow;background-image:url('/uploads/icons/locationcategories/30/69_Butik_service.png');background-repeat:no-repeat"><label for="category_all">&nbsp;</label></div></li>
{% for category in categories %}
    <li><input id="category_{{ category.id }}" type="checkbox" class="btn_category"/><div class="btn_category" style="background-image:url('/uploads/icons/locationcategories/30/69_Butik_service.png');background-repeat:no-repeat"><label for="category_{{ category.id }}"><div class="label_title">{{ category.readableName }}</div>&nbsp;</label></div></li>
{% endfor %}
</ul>
 </div>