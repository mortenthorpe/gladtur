    <ul>
{% for locationCategory in location.locationCategories %}
        {% if locationCategory.parentCategory == false %}
    <li>{{ locationCategory.readableName }}
        {%  endif %}
     % if locationCategory.getChildCategories %}
        <ul>
            {% for cCategory in locationCategory.getChildCategories %}
                <li>{{ cCategory.readableName }}</li>
