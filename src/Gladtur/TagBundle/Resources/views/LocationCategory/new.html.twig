{% extends "GladturTagBundle::layout.html.twig" %}
{% block pagejs %}
    <script type="text/javascript" src="/js/locationcategory/disableSubselectForTopcategory.js"></script>
{% endblock %}
{% block content %}
<h1>Opret Stedtag</h1>
    <div id="msgs">
    {% for flashMessage in app.session.flashbag.get('notice') %}
        <div class="flash-notice">
            {{ flashMessage }}
        </div>
    {% endfor %}
    </div>
<form action="{{ path('locationcategory_create') }}" method="post" {{ form_enctype(form) }}>
    {{ form_widget(form) }}
    <p>
        <button type="submit">Opret</button>
    </p>
</form>

<ul class="record_actions">
    <li>
        <a href="{{ path('locationtag') }}">
            Stedtag Oversigt
        </a>
    </li>
</ul>
{% endblock %}