{% extends "GladturTagBundle::layout.html.twig" %}
{% block content %}
<h1>Sted-egenskabs oversigt</h1>

<table class="records_list">
    <thead>
        <tr>
            <th>Id</th>
            <th>Sted-egenskaber</th>
            <th>Udf&oslash;r</th>
        </tr>
    </thead>
    <tbody>
    {% for entity in entities %}
        <tr>
            <td><a href="{{ path('locationtag_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
            <td>{{ entity.locationTagProperties }}</td>
            <td>
                <ul>
                    <li>
                        <a href="{{ path('locationtag_show', { 'id': entity.id }) }}">Vis</a>
                    </li>
                    <li>
                        <a href="{{ path('locationtag_edit', { 'id': entity.id }) }}">Rediger</a>
                    </li>
                </ul>
            </td>
        </tr>
    {% endfor %}
    </tbody>
</table>

<ul>
    <li>
        <a href="{{ path('locationtag_new') }}">
            Opret ny Sted-egenskab
        </a>
    </li>
</ul>
{% endblock %}