{% extends "GladturTagBundle::layout.html.twig" %}
{% block content %}
<h1>Redigering af &quot;Sted egenskab&quot; - {{entity.getReadableName}}</h1>


<form action="{{ path('tag_update', { 'id': entity.id }) }}" method="post" {{ form_enctype(edit_form) }}>
    {{ form_widget(edit_form) }}
    <p>
        <button type="submit">Gem</button>
    </p>
</form>

<ul class="record_actions">
    <li>
        <a href="{{ path('tag') }}">
            &quot;Sted egenskab&quot; Oversigt
        </a>
    </li>
    <li>
        <form action="{{ path('tag_delete', { 'id': entity.id }) }}" method="post">
            {{ form_widget(delete_form) }}
            <button type="submit">Slet</button>
        </form>
    </li>
</ul>
{% endblock %}