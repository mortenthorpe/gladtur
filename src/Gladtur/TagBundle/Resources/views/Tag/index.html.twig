        <tr>
            <th class="narrow">Id</th>
            <th class="medium">Skal vises?</th>
            <th>Navn</th>
<!--            <th>Tekstbeskrivelse</th> //-->
            <th class="wide actions">Udf√∏r</th>
        </tr>
    </thead>
    <tbody>
