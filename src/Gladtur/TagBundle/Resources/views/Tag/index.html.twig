{% extends "GladturTagBundle::layout.html.twig" %}
{% block content %}
    <!-- Tag/index.html.twig //-->
    <h1>Oversigt over &quot;Sted egenskaber&quot;</h1>
    <ul class="list_plain">
        <li>
            <a class="create" href="{{ path('tag_new') }}">
                Opret ny &quot;Sted egenskab&quot;
            </a>
        </li>
    </ul>
    <table class="records_list">
        <thead>
        <tr>
            <th class="narrow">Id</th>
            <th class="medium">Skal vises?</th>
            <th>Navn</th>
            <th>Gælder for kategorierne</th>
            <th>Ikon</th>
            <th class="wide actions">Udfør</th>
        </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('tag_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.mtGetPublishedTxt }}</td>
                <td>{{ entity.readableName }}</td>
                <td>
                    <ul>
                    {% for location_category in entity.getLocationCategories() %}
                        <li>{% if location_category.getIsTopcategory() %}Topkategori{% else %}Underkategori{% endif %}-ID:{{ location_category.id }} - {{ location_category.readableName }}</li>
                    {% endfor %}
                    </ul>
                </td>
                <td>
                    {% if entity.iconPath %}
                    <img src="{{ asset(entity.iconPath) | imagine_filter('thumbnail')}}"/>
                    {% else %}
                        {{ 'general.noimage' | trans }}
                    {% endif %}
                </td>
                <!--         <td>{{ entity.textDescription }}</td> //-->
                <td>
                    <ul class="adminmenu_local">
                        <li>
                            <a href="{{ path('tag_show', { 'id': entity.id }) }}"class="view">Vis</a>
                        </li>
                        <li>
                            <a href="{{ path('tag_edit', { 'id': entity.id }) }}">Rediger</a>
                        </li>
                        <li>
                            <a href="{{ path('tag_delete', { 'id': entity.id }) }}" class="delete">Slet</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}