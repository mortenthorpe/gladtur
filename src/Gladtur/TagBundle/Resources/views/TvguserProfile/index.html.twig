{% extends "GladturTagBundle::layout.html.twig" %}
{% block content %}
    <!-- TvguserProfile/index.html.twig //-->
    <h1>Oversigt over &quot;Bruger-Profiler&quot;</h1>
    <ul class="list_plain">
        <li>
            <a class="create" href="{{ path('tvguserprofile_new') }}">
                Opret ny &quot;Bruger-Profil&quot;
            </a>
        </li>
    </ul>
    <table class="records_list">
        <thead>
        <tr>
            <th>Id</th>
            <th>Profil-navn</th>
            <th>App profil ikon</th>
            <th>Website profil ikon</th>
            <th>Udf√∏r</th>
        </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('tvguserprofile_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.readableName }}</td>
                <td>{% if entity.path %}<img src="/uploads/avalanche/thumbnail/icons/profiles/{{ entity.path }}" class="profile-icon"/>{% else %}- Ingen upload -{% endif %}</td>
                <td>{% if entity.webiconpath %}<img src="/uploads/avalanche/thumbnail/icons/profiles/website/{{ entity.webiconpath }}" class="profile-icon"/>{% else %}- Ingen upload -{% endif %}</td>
                <td>
                    <ul class="adminmenu_local">
                        <li>
                            <a href="{{ path('tvguserprofile_show', { 'id': entity.id }) }}"class="view">Vis</a>
                        </li>
                        <li>
                            <a href="{{ path('tvguserprofile_edit', { 'id': entity.id }) }}">Rediger</a>
                        </li>
                        <li>
                            <a href="{{ path('tvguserprofile_delete', { 'id': entity.id }) }}" class="delete">Slet</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}